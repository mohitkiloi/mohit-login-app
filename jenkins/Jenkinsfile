pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                bat 'python -m venv venv'
                bat 'venv\\Scripts\\pip install -r requirements.txt'
            }
        }

        stage('Generate Logs') {
            steps {
                bat 'venv\\Scripts\\python generate_fake_logs.py'
            }
        }

        stage('Train Model') {
            steps {
                bat 'venv\\Scripts\\python train_model.py'
            }
        }

        stage('Detect Anomalies') {
            steps {
                bat 'venv\\Scripts\\python detect_anomaly.py'
            }
        }

        stage('Show Output') {
            steps {
                bat 'type logs.csv'
                bat 'type alert_report.csv'
            }
        }

        stage('Archive Reports') {
            steps {
                archiveArtifacts artifacts: 'logs.csv, alert_report.csv, experiments/metrics_report.json'
            }
        }
    }
}
